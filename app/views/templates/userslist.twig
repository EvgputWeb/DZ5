{% include('_header.twig') %}
{% include('_nav.twig') %}

    <div class="container">

      <br>
      <div class="alert alert-success" role="alert">
          Вы авторизованы как&nbsp; <b>{{ name }}</b>&nbsp; (логин: <b>{{ login }}</b>)
      </div>

          <h2>Список пользователей</h2>
          <table class="table table-bordered">
              <tr>
                  <th>Логин</th>
                  <th>Имя</th>
                  <th>Возраст</th>
                  <th>Описание</th>
                  <th>Фотография</th>
                  <th>Действия</th>
              </tr>

              {% for user in list %}
                  <tr>
                      <td>{{ user.login }}</td>
                      <td>{{ user.name }}</td>
                      <td>{{ user.age }}</td>
                      <td>{{ user.description }}</td>
                      <td><img src="/user/photo/{{ user.id }}" alt="{{ user.name }}"></td>
                      <td>
                          <a href="/userslist/deleteuser" id="deletelink_{{ user.id }} ?>" data-id='{{ user.id }}'>Удалить пользователя</a>
                      </td>
                  </tr>
              {% endfor %}

          </table>

    </div><!-- /.container -->


{% include('_footer.twig') %}
