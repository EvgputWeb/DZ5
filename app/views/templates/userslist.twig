{% include('_header.twig') %}
{% include('_nav.twig') %}

    <div class="container">

          <br>
          <div class="alert alert-success" role="alert">
              Вы авторизованы как&nbsp; <b>{{ name }}</b>&nbsp; (логин: <b>{{ login }}</b>)
          </div>

          <h2 style="position: relative;">Список пользователей
              <a href="/userslist/newuser/" class="btn btn-success" style="position: absolute; right: 0;">
                  Создать нового пользователя
              </a>
          </h2>

          <table class="table table-bordered">
              <tr>
                  <th>Логин</th>
                  <th>Email</th>
                  <th>Имя</th>
                  <th>Возраст</th>
                  <th>Описание</th>
                  <th>Фотография</th>
                  <th>Действия</th>
              </tr>

              {% for user in list %}
                  <tr>
                      <td>{{ user.login }}</td>
                      <td>{{ user.email }}</td>
                      <td>{{ user.name }}</td>
                      <td>{{ user.age }}</td>
                      <td>{{ user.description }}</td>
                      <td><img src="/user/photo/{{ user.id }}" alt="{{ user.name }}"></td>
                      <td width="250px">
                          <a class="btn btn-info" href="/userslist/edituser/{{ user.id }}" data-id='{{ user.id }}'>Редактировать</a>
                          <a class="btn btn-danger" href="/userslist/deleteuser" id="deletelink_{{ user.id }} ?>" data-id='{{ user.id }}'>Удалить</a>
                      </td>
                  </tr>
              {% endfor %}

          </table>

    </div><!-- /.container -->


{% include('_footer.twig') %}
